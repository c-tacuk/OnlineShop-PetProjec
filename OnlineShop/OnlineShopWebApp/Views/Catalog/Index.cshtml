@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<form method="post">
    <div class="text-center">
        <h1>Каталог товаров</h1>
        <input type="text" style="width:550px" placeholder="Поиск" name="request">
        <button type="submit" class="btn" style="background-color:blue" asp-controller="Catalog" asp-action="Search">🔍</button>
    </div>
</form>

<div class="row">
@foreach (var product in Model)
{
    <div class="col-4 card shadow">
    <div class="card-body">
        <a href="/product/productDetails/@product.Id">
            <h5>@product.Name</h5>
        </a>
        <img src="@product.Image" alt="Картинка товара" height="290" width="310">
        <h4>@product.Cost ₽</h4>
        <a href="/cart/add/@product.Id" style="background-color:rgba(117, 190, 218, 0.5)" class="btn" role="button">&#128722 В корзину</a>
        @if (product.InWishList == false)
        {
            <a href="/wishlist/add/@product.Id" style="background-color:#74992e" class="btn" role="button">♡</a>
        }
        else
        {
            <a href="/wishlist/index" style="background-color:rgba(117, 190, 218, 0.5)" class="btn" role="button">♥</a>
        }
        </div>
    </div>
}
</div>


